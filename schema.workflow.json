{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Storm Workflow Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the workflow."
    },
    "on": {
      "type": "object",
      "properties": {
        "push": {
          "type": "object",
          "properties": {
            "branches": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "jobs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the job."
          },
          "runs-on": {
            "type": "string",
            "description": "The environments where the job should run."
          },
          "needs": {
            "type": "string",
            "description": "The job that must complete before this job starts."
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "The name of the step."
                },
                "id": {
                  "type": "string",
                  "description": "An identifier for the step."
                },
                "run": {
                  "type": "string",
                  "description": "The command to run in this step."
                }
              },
              "required": ["name", "run"]
            }
          }
        },
        "required": ["name", "steps"]
      }
    }
  },
  "required": ["name", "jobs"]
}
